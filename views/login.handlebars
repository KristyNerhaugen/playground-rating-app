<div class="forms flex flex-col m-5 justify-center">
  <form class="login-form w-1/2 bg-white p-3 rounded shadow-md">
    <h2>Log in here.</h2>
    <div class="pt-3 px-3">
      <label for="email-login">Email</label>
      <br />
      <input
        type="text"
        id="email-login"
        class="p-1 rounded border border-solid border-slate-300"
      />
    </div>
    <div class="p-3">
      <label for="password-login">Password</label>
      <br />
      <input
        type="password"
        id="password-login"
        class="p-1 rounded border border-solid border-slate-300"
      />
    </div>
    <div class="p-3">
      <button
        type="submit"
        class="py-1 px-8 bg-yellow-300 hover:bg-white hover:border hover:border-yellow-300 rounded shadow-md"
      >Login</button>
    </div>
  </form>

  <form class="signup-form">
    <h2>Sign up to join the community.</h2>
    <div>
      <label for="username-signup">Username</label>
      <input type="text" id="username-signup" />
    </div>
    <div>
      <label for="email-signup">Email</label>
      <input type="text" id="email-signup" />
    </div>
    <div>
      <label for="password-signup">Password</label>
      <input type="password" id="password-signup" />
    </div>
    <div>
      <button type="submit">Sign Up</button>
    </div>
  </form>
</div>
<script src="/javascript/login.js"></script>
<script src="/javascript/logout.js"></script>