<h2>Your Dashboard</h2>

<section>
  <h3>Write a Review</h3>
  <form class="new-post-form">
    <div>
      <label for="park-name">Park Name</label>
      <input type="text" id="park-name" />
    </div>
    <div>
      <label for="location">Location</label>
      <input type="text" id="location" />
    </div>
    <div>
      <label for="review">Review</label>
      <textarea id="review"></textarea>
    </div>
    <div>
      <h1>Upload an Image</h1>
      <button id="upload_widget" class="cloudinary-button">Upload Image</button>
    </div>
    <button type="submit" class="btn">Post Review</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h3>Your Reviews</h3>
  <ul class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Review</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript">
</script>
<script src="/javascript/add-image.js"></script>